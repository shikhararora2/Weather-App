<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Index</title>
    {{>header}}
  </head>
  <body>

      <!-- Bootstrap 4 Navbar  -->
      {{>navbar}}

      <div class="container-fluid main_header">
        <div class="row">
          <div class="col-md-10 col-12 mx-auto">
            <div class="main_content">
                <div class="temp_form">
                    <input type="text" name="" id="cityName" value="" placeholder="Enter Your City Name" autocomplete="off">
                    <input type="submit" value="search" id="submit_button">
                </div>
                <div class="temp_information">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_date"> 13 oct</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get Output Here </p>
                        <div class="middle_layer ">
                            <p id="temp"><sup>0</sup> C</p>
                            <p id="temp_status"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      </div>
      <!-- footer Code  -->
      {{>footer}}
        <script src="js/main.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>